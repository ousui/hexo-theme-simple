// sidebar show style
.sideShow 
  .arrows
    transform rotate3d(0, 1, 0, 180deg)
  .side
    transform translate3d(2px, 0, 0)
  .wrap
    padding-left side-width  
  .sidebar
    transform none
    box-shadow 1px 0 5px color-background-deep
.sidebar
  position fixed
  left 0
  top 0
  bottom 0
  z-index 2
  width side-width
  // use transform to hide sidebar
  transform translate3d(-(side-width), 0, 0)
  transition transform side-time ease-in-out
  background-color color-background-deep
  .head-icon
    margin 30px auto 10px
    width 72px
    height 72px
    img 
      width 60px
      height 60px
      border 6px solid rgba(255, 255, 255, .85) 
      border-radius 50%
  .desc
    margin 0 auto
    text-align center
    color #707070
    font-size 15px
    max-width 180px
  .name 
    text-align center
    color color-dark
    padding 0 0 10px
    font-size 15px
  .side-nav 
    margin-top 35px
    text-align center
    font-size 16px
    .nav-item
      display inline-block
      padding 0 4px
      span
        color color-light-font
        display block
        transition hover-time color
      &:hover
        span
          color color-dark
      &:nth-child(n+2)      
        border-left 2px solid #E0E0E0
  .social-wrap
    margin 30px auto 0
    width 180px
    text-align center
    .item
      padding 5px
      display inline-block
      transition hover-time all ease-in-out
      &:hover
        background-color color-hover
        i
          color color-dark