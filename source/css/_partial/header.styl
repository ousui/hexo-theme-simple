.header
  max-width content-total-width
  margin 0 auto 20px
  text-align center
  background-color color-white
  box-shadow 0 1px 3px color-hover
  a
    color color-font
    display inline-block
    padding 10px 10px
    transition background-color hover-time ease
    &:hover
      background-color color-hover 
  .ac
    color color-danger