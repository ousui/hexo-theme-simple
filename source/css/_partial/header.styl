.header
  padding-left 10px
  margin-top 10px;
  .arrows
    width 40px
    height 40px
    border-radius 50%
    border 1px solid color-none
    line-height 40px
    text-align center
    cursor pointer
    transition side-time all
    &:after
      content '\e602'
      font-family iconfont
      font-size 24px
      color #7F7F7F
    &:hover:after
     color color-danger