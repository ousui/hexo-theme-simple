
.content
  max-width 760px
  min-height 768px
  padding 20px
  margin 20px auto 0
.archives
  margin-bottom 50px
  .title-wrap
    margin 20px 0
    padding-bottom 10px
    border-bottom 1px solid color-border
    h1
      font-size 2em
      color color-header-font
    .post-title
      position relative
      display inline-block
    .post-title::before
      content ''    
      bottom 0      
      width 100%
      position absolute      
      border-top 2px solid color-hover-line
      transform scale3d(0,1,1)
      transition transform hover-time ease-in-out      
    .post-title:hover::before
      transform scale3d(1,1,1)
    .page-info
      padding-top 10px
      font-size 16px
      color color-light-font
      a
        color color-light-font
        &:hover
          border-bottom 1px solid color-hover-line
  .read-more
    text-align left
    a
      color color-header-font
      line-height 14px
      transition all hover-time ease-in-out
      &:hover
        border-bottom 1px solid color-hover-line
        span
          color color-dark
      span
        font-size 14px
        &::after
          font-size 12px
  .content-wrap
    h1, h2, h3, h4
      color color-highlight
      margin: 1.5em 0 1em;
    h1
      font-size font-header-lg
    h2
      font-size font-header-md
    h3, h4
      font-size font-header-sm
    blockquote
      border-left 0.3em solid color-border
      p
        padding-left 0.8em
    ul
      padding-left 1.5em
      li
        list-style circle
    code
      background-color color-background-deep
    p
      margin 1em 0
      text-align justify
    img
      display block
      border 1px solid color-border
.page-nav
  margin 40px 0
  text-align center
  .space, .page-number, .extend
    position relative
    display inline-block
    width 30px
    height 30px
    margin 0 10px    
  .page-number
    text-align center
    font-size 16px
    line-height 30px
    &:hover
      border-bottom 1px solid color-dark
  .extend
    line-height 30px
    &:hover
      border-bottom 1px solid color-dark
    i
      font-size 12px
  .current
    color color-light-font
    border-bottom 1px solid color-dark
  a
    color color-light-font
