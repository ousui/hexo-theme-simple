
.content
  max-width 768px
  min-height 768px
  padding 20px
  margin 20px auto 0
.archives
  margin-bottom 30px
  .title-wrap
    margin 20px 0
    padding-bottom 10px
    border-bottom 1px solid color-border
    .post-title
      font-size 26px
      color color-header-font
    .page-info
      padding-top 10px
      font-size 16px
      color color-light-font
      a
        color color-light-font
        &:hover
          border-bottom 1px solid color-hover
      
.page-nav
  margin 40px 0
  text-align center
  .space, .page-number, .extend
    position relative
    display inline-block
    width 30px
    height 30px
    margin 0 10px    
  .page-number
    text-align center
    font-size 16px
    line-height 30px
    &:hover
      border-bottom 1px solid color-dark
  .extend
    line-height 30px
    &:hover
      border-bottom 1px solid color-dark
    i
      font-size 12px
  .current
    color color-light-font
    border-bottom 1px solid color-dark
  a
    color color-light-font
