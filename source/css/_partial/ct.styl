// categories and tags

.cate-head
  text-align center
  margin-top 20px
  font-size font-header-md
.cate-list-item
  display inline-block
  padding 0 8px
.cate-list
  max-width 80%
  margin 40px auto 0
  a
    color color-font
    padding 5px
    &:hover
      text-decoration underline
  span
    color color-light-font
    &:before
      content '['
    &:after
      content ']'